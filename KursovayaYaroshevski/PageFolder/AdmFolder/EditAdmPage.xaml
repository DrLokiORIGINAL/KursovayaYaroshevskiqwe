<Page x:Class="KursovayaYaroshevski.PageFolder.AdmFolder.EditAdmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:KursovayaYaroshevski.PageFolder.AdmFolder"
      mc:Ignorable="d" 
      d:DesignHeight="550"
      MaxHeight="550"
      MinHeight="550"
      d:DesignWidth="874"
      MaxWidth="874"
      MinWidth="874"
      Title="EditAdmPage">

    <Border>
        <Grid>
            <Label Content="Редактирование пользователя" 
                   Grid.Column="0"
                   Grid.ColumnSpan="2" 
                   BorderBrush="Transparent"
                   Style="{DynamicResource LabelLogoStyle}"/>

            <Label BorderBrush="White"
                   BorderThickness="2"
                   Margin="228,58,228,10" 
                   Grid.ColumnSpan="2"/>

            <TextBox x:Name="PasswordTb"
                     materialDesign:HintAssist.FontFamily="Cascadia Mono SemiLight"
                     materialDesign:HintAssist.HintOpacity="10"
                     materialDesign:HintAssist.Foreground="White"
                     Foreground="White"
                     FontSize="20"
                     Grid.Row="2"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     VerticalAlignment="Center"
                         Margin="150,0,150,0"
                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                     BorderBrush="White" 
                                     BorderThickness="0 0 0 1.5"
                     Text="{Binding PasswordUser}" Height="30"/>

            <ComboBox x:Name="RoleCb"
                      Foreground="#828282"
                      BorderBrush="White"
                      Background="Transparent"
                      BorderThickness="0 0 0 1.5"
                      Grid.Row="3"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="150,30,150,0"
                      FontSize="20"
                      VerticalAlignment="Top"
                      SelectedItem="{Binding Role}" 
                          DisplayMemberPath="NameRole"
                          SelectedValuePath="IdRole" 
                      FontFamily="Cascadia Mono SemiLight" 
                      Height="30"/>

            <TextBox x:Name="LoginTb"
                     materialDesign:HintAssist.FontFamily="Cascadia Mono SemiLight"
                     materialDesign:HintAssist.HintOpacity="10"
                     materialDesign:HintAssist.Foreground="White"
                     Grid.Row="1"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     VerticalAlignment="Center"
                         Margin="150,0,150,0"
                         materialDesign:HintAssist.FloatingOffset="0,-20"
                                     BorderBrush="White"
                                     BorderThickness="0 0 0 1.5"
                     Text="{Binding LoginUser}" 
                     Height="30"/>

            <Button x:Name="SaveBtn"
                    Style="{DynamicResource MaterialDesignFlatButton}"
                    Content="Сохранить изменения"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="SaveBtn_Click" 
                    Grid.ColumnSpan="2"
                    Height="50"
                    Margin="218,85,218,85" 
                    Grid.Row="4"
                    Foreground="White"
                    BorderBrush="White"
                    BorderThickness="2"/>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Border>
</Page>
