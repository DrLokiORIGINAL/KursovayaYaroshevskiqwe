<Window x:Class="KursovayaYaroshevski.WindowFolder.AdministratorFolder.AdministratorNFolder.AdministratorNWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:KursovayaYaroshevski.WindowFolder.AdministratorFolder.AdministratorNFolder"
        mc:Ignorable="d"
        Title="AdministratorNWindow"        
        Height="800"
        MaxHeight="800"
        MinHeight="800"
        Width="1200"
        MaxWidth="1200"
        MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        Icon="/ResourceFolder/ImageFolder/Icon.png">
    <Border>

        <Border.Background>
            <ImageBrush ImageSource="/ResourceFolder/ImageFolder/MainWindow.png"/>
        </Border.Background>

        <Grid>

            <Border VerticalAlignment="Top"
                    Height="55"
                    Background="Transparent"
                    MouseDown="Border_MouseDown">

                <Image  x:Name="Close"
                    Style="{DynamicResource imgClose}"
                Source="/ResourceFolder/ImageFolder/Close.png" 
                    Margin="0,20,20,0"
                    MouseLeftButtonDown="Close_MouseLeftButtonDown" Width="30"/>

            </Border>

            <Label Style="{StaticResource LabelLogoStyle}"
                   Content="Меню администратора Новокузнецкая" 
                   Margin="422,0,223,730"
                   BorderBrush="Transparent"/>

            <Label Style="{DynamicResource LabelNormalStyle}"
                           Content="{Binding ElementName=MainFrame,
                        Path=Content.Title}" 
                   Margin="264,161,64,91"/>

            <Frame Name="MaiFrame" 
                   Margin="264,161,64,91"
                           NavigationUIVisibility="Hidden"/>
            <Button x:Name="ListAdministratorBtn"
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    Margin="15,236,1045,519"
                    BorderBrush="White"
                    BorderThickness="2"
                    Content="Список&#xD;&#xA;позиций" 
                    Click="ListAdministratorBtn_Click"
                    FontFamily="Cascadia Code SemiLight"
                    Foreground="White"
                    Height="45"/>

            <Image x:Name="AddBtn"
                   Style="{DynamicResource imgClose}"
                    Source="/ResourceFolder/ImageFolder/Plus.png"
                   MouseLeftButtonDown="AddBtn_MouseLeftButtonDown"
                   Height="30"
                   Width="30 " 
                   Margin="0,244,1008,0"/>
        </Grid>
    </Border>
</Window>
